<AnchorPane prefHeight="557.0" prefWidth="828.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label layoutX="33.0" layoutY="53.0" prefHeight="33.0" prefWidth="48.0" text="Timer:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="timerSeconds" layoutX="90.0" layoutY="60.0" text="0">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="283.0" layoutY="44.0" text="Game creation">
         <font>
            <Font size="42.0" />
         </font>
      </Label>
      <Button fx:id="lookPileButton" layoutX="58.0" layoutY="232.0" mnemonicParsing="false" prefHeight="47.0" prefWidth="132.0" text="Look a pile of cards" />
      <Button fx:id="restartTimerButton" layoutX="56.0" layoutY="290.0" mnemonicParsing="false" onAction="#startTimer" prefHeight="51.0" prefWidth="135.0" text="Restart timer" />
      <AnchorPane layoutX="213.0" layoutY="119.0" prefHeight="415.0" prefWidth="601.0" style="-fx-border-color: black;">
         <children>
            <Button fx:id="savedTileButton" layoutX="242.0" layoutY="24.0" mnemonicParsing="false" onAction="#showSavedTile" prefHeight="46.0" prefWidth="135.0" text="Saved tile" />
            <Button fx:id="discardedTileButton" layoutX="421.0" layoutY="24.0" mnemonicParsing="false" onAction="#showDiscardedTile" prefHeight="46.0" prefWidth="135.0" text="Discarded tile" />
