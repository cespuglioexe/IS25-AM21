               <children>
                  <ImageView fx:id="tileImageView" fitHeight="150.0" fitWidth="200.0" layoutX="160.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true" />
                  <Button fx:id="placeTileButton" layoutX="77.0" layoutY="208.0" mnemonicParsing="false" onAction="#placeTile" text="Place" />
                  <Button fx:id="discardTIleButton" layoutX="475.0" layoutY="74.0" mnemonicParsing="false" onAction="#discardTile" text="Discard" />
                  <Button fx:id="saveTileButton" layoutX="482.0" layoutY="28.0" mnemonicParsing="false" onAction="#saveTile" text="Save" />
                  <TextField layoutX="142.0" layoutY="208.0" prefHeight="26.0" prefWidth="60.0" promptText="X coord..." fx:id="xCoordText" />
                  <TextField fx:id="yCoordText" layoutX="219.0" layoutY="208.0" prefHeight="26.0" prefWidth="60.0" promptText="Y coord" />
                  <TextField fx:id="rotationInput" layoutX="294.0" layoutY="208.0" prefHeight="26.0" prefWidth="92.0" promptText="Rotation [0 - 3]" />
                  <Label fx:id="showTile" layoutX="13.0" layoutY="121.0" prefHeight="48.0" prefWidth="519.0" />
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
      <Button fx:id="viewShipButton" layoutX="56.0" layoutY="360.0" mnemonicParsing="false" onAction="#displayShip" prefHeight="51.0" prefWidth="135.0" text="View ship" />
      <Pane fx:id="displayShipPane" prefHeight="558.0" prefWidth="829.0" style="-fx-background-color: red;" visible="false">
         <children>
            <Button fx:id="closeDisplayShip" layoutX="27.0" layoutY="37.0" mnemonicParsing="false" onAction="#closeDisplayShip" text="close" />
         </children>
      </Pane>
   </children>
</AnchorPane>
