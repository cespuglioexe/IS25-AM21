<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane prefHeight="198.0" prefWidth="283.0">
         <children>
            <VBox alignment="CENTER" StackPane.alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Galaxy Trucker" wrappingWidth="306.359375">
                     <font>
                        <Font size="45.0" />
                     </font>
                  </Text>
                  <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Insert Username" />
                        <TextField fx:id="namefield" promptText="Username..." />
                     </children>
                  </HBox>
                  <Button fx:id="checkUsername" mnemonicParsing="false" onAction="#submitUsername" text="Submit" />
                  <Label fx:id="usernameError" text="Username already used" textFill="#ee0000" visible="false" />
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
