<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane prefHeight="198.0" prefWidth="283.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fx:id="backgroundImage" pickOnBounds="true" preserveRatio="true" />
            <VBox fx:id="vbox" alignment="CENTER" spacing="20" StackPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="titleImage" pickOnBounds="true" preserveRatio="true" />
                  <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Insert Username" />
                        <TextField fx:id="namefield" promptText="Username..." />
                     </children>
                  </HBox>
                  <Button fx:id="checkUsername" mnemonicParsing="false" onAction="#submitUsername" text="Submit" styleClass="futuristic-button" />
                  <Label fx:id="usernameError" text="Username already used" textFill="#ee0000" visible="false" />
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
